<%= form_for [@category, @item] do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_area :name %><br>
      <%= f.label :image %><br>
      <%= f.text_area :image %><br>
      <%= f.label :description %><br>
      <%= f.text_area :description %><br>
      <%= f.label :price %><br>
      <%= f.text_area :price %><br>
    </div>
    <div class="actions">
      <%= f.submit "Create" %>
    </div>
<% end %>